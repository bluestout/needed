.template-cart{
    padding-top: 125px;

    .cart-title{
        font-size: 30px;
    }

    .cart-empty{
        .text-center{
            font-size: 30px;
        }
    }

    footer.footer{
        padding-top: 110px;
    }

    form.cart-form{
        margin-top: 70px;

        .cart-items{

            @media (min-width: 1025px){
                width: 74%;
                padding-right: 46px;
                float: left;
                border-right: 1px solid #EAEAEA;
                margin-right: -1px;
            }

            @media (max-width: 1024px){
                width: 100%;
                padding-right: 0px;
                float: none;
            }

            .cart-item{
                padding-bottom: 30px;

                &:last-child{
                    border-bottom: none;
                }

                .cart-item__image-td{
                    width: 30%;
                    max-width: 240px;
                }

                .item-detail--info{
                    padding-left: 35px;
                    width: 71%;

                    .product-info{
                        width: calc(100% - 95px);
                        justify-content: normal;

                        .cart-item__title{
                            margin-bottom: 15px;
                            font-family: "Copernicus-Bold";
                            font-size: 22px;
                            color: #1F3437;

                            h2{
                                font-size: 22px;
                            }
                        }

                        .bundle-lists{
                            margin-top: 0px;
                            margin-bottom: 10px;
                            display: flex;
                            flex-wrap: wrap;
                            max-width: 350px;

                            @media (max-width: 479px){
                                display: none;
                            }

                            li{
                                width: 40%;
                                margin-left: 26px;
                                line-height: 1.2;
                                position: relative;

                                @media (max-width: 768px){
                                    margin-left: 18px;
                                }
                                
                                &:before{
                                    position: absolute;
                                    content: url(https://cdn.shopify.com/s/files/1/0195/3293/9328/t/34/assets/icon-check.svg);
                                    width: 13px;
                                    height: 13px;
                                    top: 1px;
                                    left: -24px;
                                    @media (max-width: 768px){
                                        left: -17px;
                                    }
                                }

                                a{
                                    text-decoration: none;
                                    font-family: "BrownPro-Regular";
                                    font-size: 16px;
                                    color: #1F3337;

                                    @media (max-width: 768px){
                                        font-size: 14px;
                                    }
                                }
                            }
                        }

                        .cart-item__option{
                            line-height: 1.2;
                        }

                        .product-qty{
                            margin-top: 16px;
                            width: max-content;

                            .cart-item__qty{
                                padding: 12px 30px 7px;
                                width: 170px;
                            }
                            .quantity-button{
                                top: 11px;
                            }
                        }
                    }

                    .product-price{
                        margin-top: 5px;
                        text-align: right;
                        display: block;

                        .price{
                            display: block;
                            padding: 0px 3px;
                        }

                        .product-saving-rate{
                            font-size: 15px;
                            padding: 5px 3px 3px 5px;
                            background-color: rgb(232, 234, 235);
                        }
                    }
                }
            }
        }

        .form-action-mobile{
            display: none;
        }

        .sidebar-right{
            padding-left: 47px;
            width: 26%;
            float: left;
            border-left: 1px solid #EAEAEA;

            @media (max-width: 1024px){
                width: 100%;
                padding-left: 0px;
                float: none;
            }

            .cart-form__action{
                @media (min-width: 1025px){
                    width: 100%;
                }

                .cart-form__total-price{
                    span{
                        font-family: "BrownPro-Bold";
                        font-size: 20px;
                        color: #1F3437;

                        @media (min-width: 1025px){
                            width: 50%;
                            display: block;
                            float: left;
                            padding: 0px;
                        }
                        &:last-child{
                            @media (min-width: 1025px){
                                text-align: right;
                            }
                        }
                    }
                }

                ul.trust-indicators{
                    display: inline-block;
                    margin-top: 23px;
                    font-family: "BrownPro-Regular";
                    font-size: 14px;
                    color: #1F3437;
                    opacity: 0.5;

                    li{
                        width: max-content;
                        float: left;
                        margin-left: 0px;
                        padding-right: 12px;
                    }
                }

                .cart-form__submits{
                    @media (min-width: 1025px){
                        margin-top: 0px;
                    }

                    .button.button--primary{
                        font-size: 16px;
                        font-family: "BrownPro-Bold";
                        color: #FFF;
                        margin-top: 37px;
                        padding: 20px 85px 16px;
                        line-height: 19px;
                    }
                }
            }

            .icon--wrapper{
                width: 100%;
                margin-top: 30px;

                .icons__row{
                    display: block;
                    .icons__col{
                        margin-bottom: 27px;
                    }
                }
            }
        }
    }
}


/**************************************** Mobile **************************************************/
@media (max-width: 768px){
    .template-cart{
        padding-top: 80px;

        #shopify-section-cart-template{
            .container{
                .cart-title{
                    font-size: 20px;
                }

                form.cart-form{
                    margin-top: 45px;
                    padding: 0px;

                    .cart-items{
                        display: flex;
                        flex-wrap: wrap;

                        .cart-item{
                            display: flex;
                            width: 100%;
                            border-bottom: none;

                            .cart-item__image-td{
                                height: max-content;

                                @media (max-width: 480px){
                                    margin-bottom: 50px;
                                }
                            }

                            .item-detail--info{

                                @media (max-width: 480px){
                                    padding-top: 0px;
                                    padding-left: 20px;
                                }

                                @media (max-width: 380px){
                                    padding-left: 10px;
                                }

                                .product-info{
                                    margin-right: 0px;
                                    margin-bottom: 0px;
                                    width: 100%;

                                    .cart-item__title{
                                        h2{
                                            font-size: 17px;

                                            @media (max-width: 380px){
                                                font-size: 14px;
                                            }
                                        }
                                    }

                                    .product-qty{
                                        z-index: 9;
                                        
                                        @media (max-width: 480px){
                                            position: absolute;
                                            left: 0px;
                                            bottom: 20px;
                                        }
                                    }

                                    .product-price.mobile-price{
                                        width: auto;
                                        line-height: 47px;

                                        @media (max-width: 510px){
                                            line-height: 47px;
                                        }

                                        @media (max-width: 480px){
                                            position: absolute;
                                            right: 0px;
                                            bottom: 20px;
                                            line-height: 2;
                                        }
                                    }
                                }
                            }
                        }

                        .cart-upsell{
                            .cart-upsell-routines{
                                .cart-upsell-routine{
                                    margin-top: 5px;
                                    flex-wrap: wrap;

                                    .upsell-image{
                                        width: 100%;
                                        max-width: 100%;
                                        padding: 19px 23px 0px;

                                        img.plan-img{
                                            max-width: 50%;
                                        }
                                    }

                                    .routine-content{
                                        width: 100%;
                                        padding: 0px 23px 35px;

                                        .routine-title{
                                            line-height: 1.3;

                                            @media (max-width: 480px){
                                                font-size: 18px;
                                            }
                                        }

                                        ul.bundle-lists{
                                            margin-top: 10px;

                                            li{
                                                &:before{
                                                    top: 3px;
                                                }

                                                @media (max-width: 360px){
                                                    width: 100%;
                                                }

                                                a{
                                                    @media (max-width: 480px){
                                                        font-size: 14px;
                                                    }
                                                }
                                            }
                                        }

                                        .routine-description{
                                            margin-top: 18px;

                                            @media (max-width: 480px){
                                                font-size: 14px;
                                            }
                                        }

                                        .subscribe-wrapper{
                                            margin-top: 20px;

                                            .price-subscription{
                                                width: 100%;

                                                div[class^="label-"]{
                                                    @media (max-width: 480px){
                                                        font-size: 14px;
                                                    }
                                                }

                                                div[class^="content-"]{
                                                    @media (max-width: 360px){
                                                        font-size: 16px;
                                                    }
                                                }

                                                .content-subscription{
                                                    span.saving-label{
                                                        font-size: 13px;
                                                        padding: 3px 3px 2px;
                                                        margin-left: 3px;
                                                    }
                                                }
                                                    
                                                .bundled-subscription{
                                                    @media (max-width: 360px){
                                                        margin-left: 10px;
                                                    }
                                                }
                                            }

                                            button.btn-subscribe-plan{
                                                width: 100%;
                                                margin-top: 18px;
                                            }
                                        }

                                        hr.routine-content-splitter{
                                            display: none;
                                        }

                                        ul.routine-comments{
                                            margin-top: 18px;
                                            float: none;
                                            justify-content: center;
                                            flex-wrap: wrap;

                                            li+li{
                                                @media (max-width: 330px){
                                                    margin-left: 12px;
                                                    padding-left: 18px;
                                                }
                                            }
                                        }
                                    }
                                }
                            }
                        }
                    }

                    .form-action-mobile{
                        display: block;
                    }

                    .cart-form__action.form-action-mobile{
                        border-top: 1px solid #EAEAEA;
                        margin-top: 20px;
                        padding-top: 15px;
                    }

                    .cart-form__submits.form-action-mobile{
                        margin-top: 20px;
                        position: sticky;
                        bottom: 0px;
                        z-index: 10;
                    }

                    .sidebar-right{
                        border-left: none;
                        border-top: none;
                        margin-top: 0px;
                        padding-top: 0px;

                        .cart-form__action.form-action-desktop{
                            display: none;
                            .cart-form__total-price{

                            }

                            .cart-form__submits{
                                .button{
                                    margin-top: 0px;
                                }
                            }
                        }

                        .icon--wrapper{
                            margin-top: 15px;

                            .icons__row{
                                &:first-child{
                                    order: 0;
                                    padding-top: 0px;
                                }

                                &:last-child{
                                    .have_ques{
                                        margin-top: 10px;
                                        display: flex;
                                        flex-direction: column;
                                        text-align: left;
                                    }
                                }

                                .icons__col{
                                    margin-bottom: 17px;
                                    margin-top: 15px;

                                    .icons__item{
                                        .icons__item-title{
                                            br{
                                                display: none;
                                            }
                                        }
                                    }
                                }
                            }
                        }
                    }

                    .cart-form__footer{
                        margin-top: 0px;
                    }
                }
            }
        }

        footer.footer{
            padding-top: 0px;
        }
    }
}

/**************************************************************************************************/

.template-cart form.cart-form .cart-items .cart-item .item-detail--info .product-info .mobile-price{
    display: none;
}

@media (max-width: 768px){
    .template-cart form.cart-form .cart-items .cart-item .item-detail--info .product-info .mobile-price{
        display: block;
        margin-top: -42px;
    }

    .template-cart form.cart-form .cart-items .cart-item .item-detail--info > .product-price{
        display: none;
    }
}
