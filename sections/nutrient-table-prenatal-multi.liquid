                                "label": "Tab2"
                            },
                            {
                                "value": "tab3",
                                "label": "Tab3"
                            }
                        ]
                    },
                    {
                        "type": "text",
                        "id": "item_title",
                        "label": "Heading"
                    },
                    {
                        "type": "text",
                        "id": "item_capacity",
                        "label": "Capacity"
                    },
                    {
                        "type": "text",
                        "id": "item_description",
                        "label": "Description"
                    },
                    {
                        "type": "textarea",
                        "id": "item_content",
                        "label": "Content"
                    },
                    {
                        "type": "text",
                        "id": "support_mama_title",
                        "label": "Support mama Title"
                    },
                    {
                        "type": "textarea",
                        "id": "support_mama_content",
                        "label": "Support mama Content"
                    },
                    {
                        "type": "text",
                        "id": "support_baby_title",
                        "label": "Support baby Title"
                    },
                    {
                        "type": "textarea",
                        "id": "support_baby_content",
                        "label": "Support baby Content"
                    }
                ]
            }
        ]
    }
