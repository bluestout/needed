{% assign css = '' %}
<section class="text-with-images-wrapper" 
  data-section-type="text-with-images" 
  data-section-id="{{ section.id }}"
  data-offset="200"
>
  <div class="container js-blocks-container"> 
    {% for block in section.blocks %}
    <div class="row">
      <div class="text-with-image {{ block.settings.img_align }}" data-block-id="{{block.id}}">
          <div class="col-12 col-lg-6 item__image">
              <div class="item__image_wrapper">
                  {% if block.settings.img != nil %}
                  <img src="{{ block.settings.img | img_url: 'master' }}" alt="{{ block.settings.img.alt }}">
                  {% endif %}
              </div>
          </div>
          <div class="col-12 col-lg-6 item__content">
            {% if block.settings.heading != blank %}<h1 class="item__title">{{ block.settings.heading }}</h1>{% endif %}
            {% if block.settings.sub_heading != blank %}<h2 class="item__sub_title">{{ block.settings.sub_heading }}</h2>{% endif %}
            {% if block.settings.description != blank %}<p class="item__description">{{ block.settings.description }}</p>{% endif %}

            {% if block.settings.enable_thumbnail %}
            {% if block.settings.thumbnail_1 != nil or block.settings.thumbnail_2 != nil %}
            <div class="thumbnail-imgs">
                {% if block.settings.thumbnail_1 != nil %}
                <div class="thumbnail-img"><img src="{{ block.settings.thumbnail_1 | img_url: 'master' }}" alt="{{ block.settings.thumbnail_1.alt }}"></div>
                {% endif %}
                {% if block.settings.thumbnail_2 != nil %}
                <div class="thumbnail-img"><img src="{{ block.settings.thumbnail_2 | img_url: 'master' }}" alt="{{ block.settings.thumbnail_2.alt }}"></div>
                {% endif %}
            </div>
            {% endif %}
            {% endif %}

            {% if block.settings.btn_url != nil %}
            <div class="more-link"><a href="{{ block.settings.btn_url }}" class="learn-more"><span>{{ block.settings.btn_text }}</span></a></div>
            {% endif %}
          </div>
      </div>
    </div>

    {% capture styles %}
      [data-block-id="{{block.id}}"] .item__content {
        background-color: {{ block.settings.text_bgc }};
      }
    {% endcapture %}
    {% assign css = css | append: styles %}
    {% endfor %}
  </div>
</section>

{% if css != blank %}
<style>{{ css }}</style>
{% endif %}

{% schema %}
{
  "name": "Text with images",
  "max_blocks": 4,
  "settings": [
  ],
  "blocks": [
    {
      "type": "Item",
      "name": "Item",
      "settings": [
        {
          "type": "image_picker",
          "id": "img",
          "label": "Image"
        },
        {
          "type": "select",
          "id": "img_align",
          "label": "Image ailgnment",
          "options": [
            {
              "value": "left", "label": "Left"
            }, 
            {
              "value": "right", "label": "Right"
            }
          ],
          "default": "right"
        },
        {
          "type": "text",
          "id": "heading",
          "label": "Heading"
        },
        {
          "type": "text",
          "id": "sub_heading",
          "label": "Sub Heading"
        },
        {
          "type": "textarea",
          "id": "description",
          "label": "Description",
          "info": "Use html tag <strong>text</strong> for highlight text with primary color"
        },
        {
          "type": "checkbox",
          "id": "enable_thumbnail",
          "label": "Enable thumbnail",
          "default": false  
        },
        {
          "type": "image_picker",
          "id": "thumbnail_1",
          "label": "Image 1"
        },
        {
          "type": "image_picker",
          "id": "thumbnail_2",
          "label": "Image 2"
        },
        {
          "type": "text",
          "id": "btn_text",
          "label": "Button Text",
          "default": "Learn More"
        },
        {
           "type": "url",
           "id": "btn_url",
           "label": "Button URL"
        },
        {
          "type": "color",
          "id": "text_bgc",
          "label": "Background color",
          "default": "#fff"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Text with images",
      "category": "Banner",
      "blocks": [
        {
          "type": "Item"
        }
      ]
    }
  ]
}
{% endschema %}