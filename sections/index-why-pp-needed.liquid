{{ 'why-pp-needed.scss.css' | asset_url | stylesheet_tag }}

<section class="why-pp-needed">
    <div class="container wow fadeIn js-animate animate-fade-in">
        <div class="row js-animate animate-fade-in">
            {% if section.settings.section_subtitle != blank %}
                <p class="why-pp-needed__subtitle pro-ico">{{ section.settings.section_subtitle }}</p>
            {% endif %}

            <h2 class="why-pp-needed__title pro-ico">{{ section.settings.section_title }}</h2>
        </div>
        {% if section.blocks.size > 0 %}
            <div class="why-pp-needed__row carousel" data-slick='{"slidesToShow": 3,"slidesToScroll": 1, "infinite": true, "responsive":[{"breakpoint": 1025,"settings":{"slidesToShow": 2 }},{"breakpoint": 768,"settings":{"slidesToShow":2 }} ]}'>
                {% for block in section.blocks  %}
                    <div class="why-pp-needed__col">
                        <img src="{{ block.settings.item_image | img_url: "x800" }}" alt="item image">
                        <span class="why-pp-needed__item-title" data-keyword-context>{{ block.settings.item_text }}</span>
                    </div>
                {% endfor %}
            </div>
        {% endif %}
        {% if section.settings.section_bottom_title != blank or section.settings.section_bottom_sub_title != blank or section.settings.section_bottom_desc != blank %}
        <div class="better-products-bottom-contents">
            {% if section.settings.section_bottom_title != blank %}
            <h1 class="btm-heading">{{ section.settings.section_bottom_title }}</h1>
            {% endif %}
            {% if section.settings.section_bottom_sub_title != blank %}
            <h1 class="btm-sub-heading">{{ section.settings.section_bottom_sub_title }}</h1>
            {% endif %}
            <div class="btm-contents">
                <h3 class="btm-desc">{{ section.settings.section_bottom_desc }}{% if section.settings.quiz_url != nil %}<a href="/pages/{{ section.settings.quiz_url }}" class="quiz-link">{{ section.settings.quiz_text }} {% include 'icon-arrow' direction: 'right' %}</a>{% endif %}</h3>
            </div>
        </div>
        {% endif %}
    </div>
</section>

<style>
#MainContent .why-pp-needed {
    padding-top: 80px;
    padding-bottom: 140px;
    background-color: {{ section.settings.background_color }};
}

{% for block in section.blocks %}
    {% if block.settings.icon_hover != blank %}
        .why-pp-needed__item .why-pp-needed__item-icon--{{ block.id }} {
            background-image: url({{ block.settings.icon_hover | img_url: "x800" }}) !important;
        }
    {% endif %}
{% endfor %}

.why-pp-needed .why-pp-needed__title{
    font-size: 35px;
    max-width: 100%;
    margin: 0px auto;
}


.why-pp-needed__item-title{
    text-align: center !important;
    padding: 0px 20px;

}

.why-pp-needed__row .slick-prev {
    position: absolute;
    top: 50%;
    left: 5px;
    background: transparent;
    transform: translateY(-50%);
    z-index: 9999;
}

.why-pp-needed__row .slick-prev svg {
    width: 30px;
    height: 30px;
    transform: rotate(90deg);
}

.why-pp-needed__row .slick-next {
    position: absolute;
    top: 50%;
    right: 5px;
    background: transparent;
    transform: translateY(-50%);
}

.why-pp-needed__row .slick-next svg {
    width: 30px;
    height: 30px;
    transform: rotate(-90deg);
}
</style>
<script>
    
    $(document).ready(function() {
        if($(window).width() > 500){
            $(".why-pp-needed .why-pp-needed__row").slick();
            $(".why-pp-needed__row .slick-prev").html('<svg viewBox="0 0 32 32" xmlns="http://www.w3.org/2000/svg"><defs><style>.cls-1{fill:none;stroke:#000;stroke-linecap:round;stroke-linejoin:round;stroke-width:2px;}</style></defs><title/><g id="chevron-bottom"><line class="cls-1" x1="16" x2="7" y1="20.5" y2="11.5"/><line class="cls-1" x1="25" x2="16" y1="11.5" y2="20.5"/></g></svg>');
            $(".why-pp-needed__row .slick-next").html('<svg viewBox="0 0 32 32" xmlns="http://www.w3.org/2000/svg"><defs><style>.cls-1{fill:none;stroke:#000;stroke-linecap:round;stroke-linejoin:round;stroke-width:2px;}</style></defs><title/><g id="chevron-bottom"><line class="cls-1" x1="16" x2="7" y1="20.5" y2="11.5"/><line class="cls-1" x1="25" x2="16" y1="11.5" y2="20.5"/></g></svg>');
        }
    });
</script>


