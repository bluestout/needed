<script>
    function scrollToPlan(planId){
        //$('html, body').animate({scrollTop: $('#' + planId).offset().top -120 }, '0');
        setTimeout(function(){$('html, body').scrollTop(($('#' + planId).offset().top-120));},50);
    }

    $(function(){
        var urlParams = window.location.href.split("#");
        if(urlParams.length > 1){
            scrollToPlan(urlParams[1]);
        }

        $(".bundle-banner-button").on("click", function(e){
            e.preventDefault();
            scrollToPlan($(this).attr("href"));
        });
    });
</script>